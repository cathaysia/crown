{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "include-component-in-tag": false,
  "bump-minor-pre-major": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "path": "Cargo.toml",
          "type": "toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "path": "Cargo.toml",
          "type": "toml",
          "jsonpath": "$.workspace.dependencies.crown.version"
        },
        {
          "path": "Cargo.toml",
          "type": "toml",
          "jsonpath": "$.workspace.dependencies.crown-derive.version"
        },
        {
          "path": "Cargo.toml",
          "type": "toml",
          "jsonpath": "$.workspace.dependencies.crown-jsasm.version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown')].version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown-bin')].version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown-derive')].version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown-wasm')].version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown-cabi')].version"
        },
        {
          "path": "Cargo.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='crown-jsasm')].version"
        }
      ]
    }
  }
}
